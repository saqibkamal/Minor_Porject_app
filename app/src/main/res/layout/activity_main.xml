<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/uprect"
        android:background="@drawable/rectangleup">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="158dp"
            android:layout_height="154dp"
            android:background="@drawable/circle"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="529dp"
        android:layout_below="@+id/uprect"
        android:layout_above="@+id/rectbelow">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:id="@+id/listView"></ListView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:id="@+id/rectbelow"
        android:background="@drawable/figma1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:background="@drawable/cam"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/camera" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/hom"
            android:layout_centerVertical="true"
            android:id="@+id/home"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:layout_width="55dp"
            android:id="@+id/gallery"
            android:layout_height="55dp"
            android:background="@drawable/gallery"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>


</RelativeLayout>