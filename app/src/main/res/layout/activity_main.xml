<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:id="@+id/uprect">

        <Button
            android:id="@+id/gall"
            android:layout_width="350dp"
            android:textSize="22dp"
            android:layout_height="90dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Import Image From Gallery"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="180dp"
            android:fontFamily="@font/pt"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:drawableLeft="@drawable/gallery_white"/>

        <Button
            android:id="@+id/camm"
            android:layout_width="350dp"
            android:layout_marginTop="40dp"
            android:textSize="22dp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_height="90dp"
            android:layout_below="@+id/gall"
            android:fontFamily="@font/pt"
            android:text="Capture Image From Camera"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/camera_white"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:textStyle="bold"/>



    </RelativeLayout>




</RelativeLayout>